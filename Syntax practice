//one of the more interesting examples I found while reading - playing around with each line to see how they interact with the overal function

#include <iostream>
using namespace std;
#include <conio.h>            //for Getch()

char ch= 'a';

void getachar()
void putachar()

int main()
  {
  while( ch !='\r')
    {
    getachar();
    putachar();
    }
    cout <<endl;
    return 0;
  }
    
 void getachar()
  {
  ch = getch();
  }
  
 void putachar()
  {
  cout << ch
  }
